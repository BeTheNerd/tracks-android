<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:descendantFocusability="blocksDescendants">
	
	<CheckBox android:id="@+id/TLI_done"
		android:text="" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" />
	
	<TextView android:id="@+id/TLI_name"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:layout_toRightOf="@id/TLI_done" />
			
	<LinearLayout android:id="@+id/TLI_defer_box"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/TLI_name"
		android:layout_toRightOf="@id/TLI_done"
		android:orientation="horizontal" >
		
		<TextView android:id="@+id/TLI_info"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1" />

		<Button android:id="@+id/TLI_defer_1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="0"
			android:width="40dp"
			android:textColor="#FFF"
			android:background="#33CC00"
			android:text="+1" />
		<Button android:id="@+id/TLI_defer_7"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:layout_weight="0"
			android:width="40dp"
			android:textColor="#FFF"
			android:background="#FFA500"
			android:text="+7" />
	</LinearLayout>
</RelativeLayout>
